{
  "title": "NestJS HTTP Metrics",
  "timezone": "browser",
  "editable": true,
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "query": "label_values(http_requests_total, service)",
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests per second by route",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (route) (rate(http_requests_total{service=~\"$service\"}[1m]))",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 latency by route (s)",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, route) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])))",
          "legendFormat": "p95 {{route}}"
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "Requests by status code",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "sum by (status_code) (rate(http_requests_total{service=~\"$service\"}[5m]))",
          "legendFormat": "{{status_code}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Process CPU user seconds (rate)",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 9 },
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total{service=~\"$service\"}[1m])",
          "legendFormat": "cpu user"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Resident memory (bytes)",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 18 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{service=~\"$service\"}",
          "legendFormat": "rss"
        }
      ]
    }
  ]
}
