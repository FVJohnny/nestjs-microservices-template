    location /api/service-10/ { proxy_pass ${SERVICE_10_URL:-http://service-10:3000/}; proxy_http_version 1.1; proxy_set_header Host $host; proxy_set_header X-Real-IP $remote_addr; proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; proxy_set_header X-Forwarded-Proto $scheme; }

    # Fallback to static files
    location / {
        try_files $uri $uri/ =404;
    }
