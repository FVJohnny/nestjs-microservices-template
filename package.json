{
  "name": "nestjs-microservices-monorepo-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nx run-many -t build --exclude=nestjs-microservices-monorepo-template",
    "test:unit": "nx run-many --target=test --all --exclude=nestjs-microservices-monorepo-template",
    "test:unit:watch": "npm run test:unit -- --watchAll",
    "test:unit:nocache": "npm run test:unit -- --skip-nx-cache",
    "test:e2e": "nx run-many --target=test:e2e --all --exclude=nestjs-microservices-monorepo-template",
    "test:e2e:watch": "npm run test:e2e -- --watchAll",
    "test:e2e:nocache": "npm run test:e2e -- --skip-nx-cache",
    "test:nocache": "npm run test -- --skip-nx-cache",
    "test": "npm run test:unit && npm run test:e2e",
    "lint": "nx run-many -t lint --exclude=nestjs-microservices-monorepo-template",
    "lint:fix": "npm run lint -- --fix",
    "dev": "./infra/docker/start-dev.sh",
    "dev-down": "docker compose -f infra/docker/docker-compose.dev.yml down",
    "prod": "docker compose -f infra/docker/docker-compose.prod.yml up --build -d",
    "prod-down": "docker compose -f infra/docker/docker-compose.prod.yml down",
    "nx": "nx",
    "zip": "zip -r project.zip . -x \"*/node_modules/*\" \"*/dist/*\" \"node_modules/*\" \"dist/*\" \".nx/*\" \".git/*\""
  },
  "workspaces": [
    "backend/libs/*",
    "backend/services/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.34.0",
    "@nx/eslint": "21.5.3",
    "@nx/js": "21.5.3",
    "@nx/node": "21.5.3",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nx": "21.5.3",
    "ts-jest": "^29.4.1",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript-eslint": "^8.42.0"
  },
  "nx": {}
}
