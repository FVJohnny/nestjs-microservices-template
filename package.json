{
  "name": "nestjs-microservices-monorepo-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nx run-many -t build --exclude=nestjs-microservices-monorepo-template",
    "test": "nx run-many --target=test --all --exclude=nestjs-microservices-monorepo-template $CACHE_FLAG && nx run-many --target=test:e2e --all $CACHE_FLAG",
    "test:silent": "LOG_LEVEL=error npm run test",
    "test:verbose": "LOG_LEVEL=verbose npm run test",
    "test:nocache": "LOG_LEVEL=error CACHE_FLAG=--skip-nx-cache npm run test",
    "lint": "nx run-many -t lint --fix --exclude=nestjs-microservices-monorepo-template",
    "dev": "./infra/docker/start-dev.sh && npm run dev-logs",
    "dev-down": "docker compose -f infra/docker/docker-compose.dev.yml down",
    "dev-logs": "docker compose -f infra/docker/docker-compose.dev.yml logs -f service-1",
    "prod": "docker compose -f infra/docker/docker-compose.prod.yml up --build -d",
    "prod-down": "docker compose -f infra/docker/docker-compose.prod.yml down",
    "prod-logs": "docker compose -f infra/docker/docker-compose.prod.yml logs -f service-1",
    "nx": "nx",
    "prepare": "command -v husky >/dev/null 2>&1 && husky || true",
    "zip": "zip -r project.zip . -x \"*/node_modules/*\" \"*/dist/*\" \"node_modules/*\" \"dist/*\" \".nx/*\" \".git/*\""
  },
  "workspaces": [
    "backend/libs/*",
    "backend/services/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@nx/eslint": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/node": "^21.4.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "nx": "^21.4.1",
    "ts-jest": "^29.4.1",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript-eslint": "^8.42.0"
  },
  "nx": {}
}
