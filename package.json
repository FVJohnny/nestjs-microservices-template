{
  "name": "nestjs-microservices-monorepo-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many --target=test --all --exclude=nestjs-microservices-monorepo-template,@libs/nestjs-eslint && nx run-many --target=test:e2e --all",
    "lint": "nx run-many -t lint --exclude=nestjs-microservices-monorepo-template",
    "dev": "make dev",
    "prod": "make prod",
    "nx": "nx",
    "prepare": "command -v husky >/dev/null 2>&1 && husky || true"
  },
  "workspaces": [
    "backend/libs/*",
    "backend/services/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@nx/eslint": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/node": "^21.4.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "nx": "^21.4.1",
    "ts-jest": "^29.4.1",
    "typescript-eslint": "^8.42.0"
  },
  "nx": {}
