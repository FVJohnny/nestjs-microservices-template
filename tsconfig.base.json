{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@libs/nestjs-common": ["backend/libs/common/src"],
      "@libs/nestjs-common/test-exports": ["backend/libs/common/src/test-exports"],
      "@libs/nestjs-kafka": ["backend/libs/kafka/src"],
      "@libs/nestjs-mongodb": ["backend/libs/mongodb/src"],
      "@libs/nestjs-redis": ["backend/libs/redis/src"],
      "@libs/nestjs-postgresql": ["backend/libs/postgresql/src"],
      "@bc/*": ["backend/services/service-1/src/bounded-contexts/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
