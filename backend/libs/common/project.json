{
  "name": "nestjs-common",
  "sourceRoot": "backend/libs/common/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "backend/libs/common/dist",
        "main": "backend/libs/common/src/index.ts",
        "tsConfig": "backend/libs/common/tsconfig.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "backend/libs/common/src/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "backend/libs/common/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": [
    "type:lib",
    "scope:nestjs"
  ]
}