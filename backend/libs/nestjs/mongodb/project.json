{
  "name": "nestjs-mongodb",
  "sourceRoot": "backend/libs/nestjs/mongodb/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "backend/libs/nestjs/mongodb/dist", 
        "main": "backend/libs/nestjs/mongodb/src/index.ts",
        "tsConfig": "backend/libs/nestjs/mongodb/tsconfig.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["backend/libs/nestjs/mongodb/src/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest", 
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "backend/libs/nestjs/mongodb/jest.config.js"
      }
    }
  },
  "tags": ["type:lib", "scope:nestjs", "topic:mongodb"]
}