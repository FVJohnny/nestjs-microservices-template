{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@libs/nestjs-common": ["../../libs/nestjs/common/dist"],
      "@libs/nestjs-events": ["../../libs/nestjs/events/dist"],
      "@libs/nestjs-kafka": ["../../libs/nestjs/kafka/dist"],
      "@libs/nestjs-mongodb": ["../../libs/nestjs/mongodb/dist"],
      "@libs/nestjs-postgresql": ["../../libs/nestjs/postgresql/dist"],
      "@libs/nestjs-redis": ["../../libs/nestjs/redis/dist"]
    }
  }
}
