echo "Removing NX Cache"
npx nx reset

echo "Building project..."
npm run -s build || {
  echo "\n✖ Build failed. Fix issues before committing."
  exit 1;
}

echo "Running Lint..."
npm run -s lint || {
  echo "\n✖ Lint failed. Fix issues before committing.";
  exit 1;
}

echo "Running Tests..."
LOG_LEVEL=error npm run -s test || {
  echo "\n✖ Tests failed. Fix failures before committing.";
  exit 1;
}

echo "✓ All checks passed. Proceeding with commit."
