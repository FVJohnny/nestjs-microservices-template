echo "Running Lint..."
npm run -s lint:fix || {
  echo "\n✖ Lint failed. Fix issues before committing.";
  exit 1;
}

echo "Running Tests..."
LOG_LEVEL=error npm run -s test || {
  echo "\n✖ Tests failed. Fix failures before committing.";
  exit 1;
}

echo "✓ All checks passed. Proceeding with commit."
